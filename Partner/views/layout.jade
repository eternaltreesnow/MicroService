        // [if lt IE 9]>
            <script src="/lib/html5shiv.min.js"></script>
            <script src="/lib/respond.min.js"></script>
            <![endif]
    body
        - // Navigator
        include include/navigator
        - // Content
        div.row.main-page
            block content
        - // Modal
        block modal
        - // jQuery-2.0.3
        script(src="/lib/jquery-2.0.3.min.js")
        - // Bootstrap
        script(src="/lib/bootstrap-3.3.5-dist/js/bootstrap.min.js")
        - // SeaJS
        script(src="/static/sea.js")
        script(src="/static/seajs-css.js")
        - // Local script
        block script


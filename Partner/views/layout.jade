doctype html
html(lang="zh-CN")
    block vars
    - var AuthLogin = 'http://localhost:10001'; // AuthLogin服务Uri
    - var ClinicService = 'http://localhost:10002'; // ClinicService服务Uri
    - var UserManage = 'http://localhost:10003'; // UserManage服务Uri
    - var TeamManage = 'http://localhost:10004'; // TeamManage服务Uri
    - var DoctorCli = 'http://localhost:10005'; // DoctorCli服务Uri
    - var TechnicianCli = 'http://localhost:10006'; // TechnicianCli服务Uri
    - var HospitalCli = 'http://localhost:10007'; // HospitalCli服务Uri
    - var PartnerCli = 'http://localhost:10008'; // PartnerCli服务Uri
    head
        meta(http-equiv="Content-Type", content="text/html, charset=UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="icon", href="/static/img/logo.png")
        block title
            title 心电云分析平台
        - // Bootstrap CSS
        link(rel="stylesheet", href="/lib/bootstrap-3.3.5-dist/flatly/bootstrap.min.css")
        - // jQuery UI
        link(rel="stylesheet", href="/lib/jquery-ui-1.11.4/jquery-ui.min.css")
        - // Normalize.css
        link(rel="stylesheet", href="/lib/normalize.css")
        - // Frame
        link(rel="stylesheet", href="/static/css/frame.css")

// - extends 继承 layout.jade
extends ../layout.jade
block vars
    - var nav_parent = 'task'
    - var nav_child = 'occupiedTask'

block content
    div.path-navigation
        ol.breadcrumb
            li 任务管理
            li.active 已接任务

    div.container-fluid
        b.table-title.pull-left 已接任务列表
    div.container-fluid.table-container
        table.table.table-striped.table-hover.table-bordered#occupiedTaskTable(cellspacing="0", width="100%")
            thead
                tr
                    th #
                    th 姓名
                    th 性别
                    th 检查时间
                    th 描述
                    th 操作
            tbody

block modal
    div.modal.fade#cancelModal
        div.modal-dialog
            input#cancelModalTaskId(type="hidden")
            div.modal-content
                div.modal-header
                    button.close(type="button", data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") &times;
                    h4.modal-title 取消任务提示
                div.modal-body
                    p 确认是否要取消该任务 ?
                div.modal-footer
                    a.btn.btn-default(data-dismiss="modal") 返回列表
                    a.btn.btn-primary#cancelModalBtn(href="javascript:void(0);") 取消任务

block script
    script(src="/lib/DataTables-1.10.8/js/jquery.dataTables.min.js")
    script(src="/lib/DataTables-1.10.8/js/dataTables.bootstrap.min.js")
    script(src="/lib/bootstrap-datetimepicker/moment/moment.js")
    script.
        seajs.use('js/occupiedTask');
